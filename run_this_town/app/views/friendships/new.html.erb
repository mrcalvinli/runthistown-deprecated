	<h3>People</h3>
	<% for user in User.all %>
		<li><%= user.get_name %> <%= link_to "(FRIEND ME!)", {controller: "friendships", action: "create", user_id: current_user.id, friend_id: user.id}, {:method => :post} %></li>
	<% end %>
</div>
