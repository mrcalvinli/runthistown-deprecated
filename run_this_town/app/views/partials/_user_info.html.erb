<div class = "userContainer">
	<div class = "userImgContainer" style = "width: 100px; height: 100px; overflow: hidden; float: left;">
		<%= image_tag "ProfPic.jpg", class: "img-thumbnail", style: "width: 100px;" %>
	</div>
	<span style = "display: inline-block; margin-left: 20px; margin-top: 36px; font-size: 22px; " class = "userUsernameSpan">
		<%= user.get_name %>
	</span>
	<% if friend_status == 'accepted' %>
		<%= link_to "", {controller: "friendships", action: "destroy", user_id: current_user.id, friend_id: user.id}, {:method => :delete, :class => "userDelFriendLink"} %>
	<% elsif friend_status == nil %>
		<%= link_to "", {controller: "friendships", action: "destroy", user_id: current_user.id, friend_id: user.id}, {:method => :delete, :class => "userAddFriendLink"} %>
	<% end %>
</div>