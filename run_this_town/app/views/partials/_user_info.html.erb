<div class = "userContainer">
	<div class = "userImgContainer" style = "width: 100px; height: 100px; overflow: hidden; float: left;">
		<%= image_tag "ProfPic.jpg", class: "img-thumbnail", style: "width: 100px;" %>
	</div>
	<span style = "display: inline-block; margin-left: 20px; margin-top: 36px; font-size: 22px; " class = "userUsernameSpan">
		<%= user.get_name %>
	</span>
	<% if friend_status == 'accepted' %>
		<%= button_to "Delete Friend", {controller: "friendships", action: "destroy", user_id: current_user.id, friend_id: user.id}, {type: "button", :id => "userDelFriendBtn", :class => "btn btn-warning", :style => "float: right; margin-top: 36px; margin-right: 10px;", :method => :get, :form => { style: "float: right" } } %>
	<% elsif friend_status == nil %>
		<%= button_to "Add Friend", {controller: "friendships", action: "create", user_id: current_user.id, friend_id: user.id}, {type: "button", :id => "userAddFriendBtn", :class => "btn btn-warning", :style => "float: right; margin-top: 36px; margin-right: 10px;", :method => :get, :form => { style: "float: right" } } %>
	<% end %>
</div>