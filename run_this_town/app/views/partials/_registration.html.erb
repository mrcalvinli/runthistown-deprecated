<div class="modal-body" style = "text-align: center">
        <p>Input your information below</p><br>

        <div style = 'display: inline-block; text-align: left'>
            <%= form_for(:user, :url => session_path(:user)) do |f| %>

            <div><%= f.label :email %><br />
            <%= f.email_field :email, :autofocus => true, :autofocus => true %></div>

            <div><%= f.label :first_name %><br />
            <%= f.text_field :first_name, :autofocus => true %></div>

            <div><%= f.label :last_name %><br />
            <%= f.text_field :last_name, :autofocus => true %></div>

            <div><%= f.label :age %><br />
            <%= f.text_field :age, :autofocus => true%></div>

            <div><%= f.label :password %><br />
            <%= f.password_field :password %></div>

            <div><%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation %></div>
      </div>
      </div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
        <button type="button" class="btn btn-warning"><%= f.submit "Create Account" %></button>
        <% end %>
      </div>